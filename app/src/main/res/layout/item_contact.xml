<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="11dp">


    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="35sp"
        android:gravity="center"
        android:text="Mohd.Sohaib"
        tool:layout_constraintBottom_toTopOf="@+id/textView4"
        tool:layout_constraintStart_toStartOf="parent"
        tool:layout_constraintTop_toTopOf="parent"
        tool:layout_constraintVertical_bias="0.38"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="35sp"
        android:gravity="center"
        android:text="9999999999"
        tool:layout_constraintBottom_toBottomOf="parent"
        tool:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:text="Delete"
        android:backgroundTint="#0A9810"
        android:contentDescription="TODO" />
</LinearLayout>